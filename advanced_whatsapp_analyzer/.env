# Application Configuration
APP_NAME=Advanced WhatsApp Chat Analyzer
APP_VERSION=2.0.0
DEBUG=True
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///chat_analyzer.db
# For PostgreSQL: postgresql://username:password@localhost:5432/chat_analyzer
# For MySQL: mysql://username:password@localhost:3306/chat_analyzer

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# File Upload Limits
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=txt,csv,xlsx

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Email Configuration (for reports)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SENDER_EMAIL=your_email@gmail.com

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=chat-analyzer-data

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_TOPIC_MODELING=True
ENABLE_PREDICTIVE_ANALYTICS=True
ENABLE_EXPORT_FEATURES=True
ENABLE_REAL_TIME_PROCESSING=False

# Model Configuration
DEFAULT_LANGUAGE=en
SENTIMENT_MODEL=vader
TOPIC_MODEL_NUM_TOPICS=10
MIN_WORDS_FOR_ANALYSIS=50

# UI Configuration
THEME=light
SIDEBAR_STATE=expanded
LAYOUT=wide

# Performance
MAX_WORKERS=4
BATCH_SIZE=1000
PROCESSING_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5